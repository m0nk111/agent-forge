[Unit]
Description=Agent-Forge SSH Authentication Service
Documentation=https://github.com/m0nk111/agent-forge
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/home/flip/agent-forge
Environment="PATH=/home/flip/agent-forge/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/flip/agent-forge/venv/bin/python /home/flip/agent-forge/api/auth_routes.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=agent-forge-auth

# Security hardening
NoNewPrivileges=false
PrivateTmp=true
# Note: PAM authentication requires root access to /etc/shadow
# ProtectSystem and ProtectHome disabled for PAM to work
ReadWritePaths=/home/flip/agent-forge/secrets

[Install]
WantedBy=multi-user.target
