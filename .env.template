# Google OAuth Configuration
# Copy this file to .env and fill in your credentials

# Google OAuth Client ID (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Google OAuth Client Secret (from Google Cloud Console)
GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth Redirect URI (must match Google Console configuration)
GOOGLE_REDIRECT_URI=http://192.168.1.26:8897/auth/callback

# Session secret for cookie encryption (generate with: openssl rand -hex 32)
SESSION_SECRET=generate-a-random-32-character-string-here

# Allowed email addresses (comma-separated)
# Only these emails can login to the dashboard
ALLOWED_EMAILS=your-email@gmail.com,another-email@gmail.com
